<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Harmony\Bundle\CoreBundle\Model\Config">
        <field name="name" column="name" length="255"/>
        <field name="value" column="value" length="255"/>
        <many-to-one field="parent" target-entity="Harmony\Bundle\CoreBundle\Model\Config" inversed-by="children">
            <join-column name="parent_id" on-delete="CASCADE"/>
        </many-to-one>
        <many-to-one field="extension" target-entity="Harmony\Bundle\CoreBundle\Model\Extension" inversed-by="configs">
            <join-column name="extension_id" on-delete="CASCADE"/>
        </many-to-one>
    </mapped-superclass>

</doctrine-mapping>